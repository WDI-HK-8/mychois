var app = angular.module('mychois', ['ngRoute', 'ng-token-auth']);

app.config(['$routeProvider', '$authProvider', function($routeProvider, $authProvider){
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>", 
      controller: 'StaticPagesCtrl'
    }).
    when('/signup', {
      templateUrl: "<%= asset_path('auth/signup.html.erb') %>", 
      controller: 'SignUpCtrl'
    }).
    when('/login', {
      templateUrl: "<%= asset_path('auth/login.html') %>", 
      controller: 'LoginCtrl'
    }).
    when('/profile', {
      templateUrl: "<%= asset_path('auth/profile.html') %>"
    })

  $authProvider.configure({
    apiUrl: "<%= ENV['URL'] %>/api/v1" || 'https://localhost:3000/api/v1',
    emailRegistrationPath:   '/customers'
  })    
}]);



