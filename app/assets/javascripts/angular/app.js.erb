var app = angular.module('mychois', ['ngRoute', 'ng-token-auth', 'autocomplete']);

app.config(['$routeProvider', '$authProvider', function($routeProvider, $authProvider){
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>", 
      controller: 'StaticPagesCtrl'
    }).
    when('/signup', {
      templateUrl: "<%= asset_path('auth/signup.html.erb') %>", 
      controller: 'SignUpCtrl'
    }).
    when('/login', {
      templateUrl: "<%= asset_path('auth/login.html') %>", 
      controller: 'LoginCtrl'
    }).
    when('/profile', {
      templateUrl: "<%= asset_path('auth/profile.html') %>",
      controller: 'ProfileCtrl'
    }).
    when('/grocery_lists/create', {
      templateUrl: "<%= asset_path('grocery_lists/create.html') %>",
      controller: 'GroceryListCreateCtrl'
    }).
    when('/grocery_lists/', {
      templateUrl: "<%= asset_path('grocery_lists/index.html') %>",
      controller: "GroceryListAllCtrl"
    }).
    when('/grocery_lists/edit/:id', {
      templateUrl: "<%= asset_path('grocery_lists/edit.html') %>",
      controller: 'GroceryListEditCtrl'
    }).
    when('/buyers/apply', {
      templateUrl: "<%= asset_path('buyer/apply.html') %>",
      controller: 'BuyerApplyCtrl'
    }).
    when('/buyers/index', {
      templateUrl: "<%= asset_path('buyer/index.html') %>",
      controller: 'BuyerIndexCtrl'
    }).
    when('/buyers/show/:id', {
      templateUrl: "<%= asset_path('buyer/show.html') %>",
      controller: 'BuyerShowCtrl'
    });

  $authProvider.configure({
    apiUrl: "<%= ENV['URL'] %>/api/v1" || 'https://localhost:3000/api/v1',
    emailRegistrationPath:   '/customers'
  })    
}]);



